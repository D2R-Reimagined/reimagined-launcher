<Window 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reimaginedLauncher="clr-namespace:ReimaginedLauncher"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="ReimaginedLauncher.MainWindow"
    x:DataType="reimaginedLauncher:MainWindow"
    Title="D2R Reimagined Launcher"
>
    <DockPanel LastChildFill="True">
        <!-- Top bar -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Right">
            <Button Content="Login with Nexus Mods" Margin="5,0" Click="OnNexusLoginClicked"/>
        </StackPanel>

        <!-- Main Grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/> <!-- nav -->
                <ColumnDefinition Width="*"/>   <!-- content -->
            </Grid.ColumnDefinitions>

            <!-- Navigation -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>   <!-- For ListBox -->
                    <RowDefinition Height="Auto"/> <!-- For Buttons at the bottom -->
                </Grid.RowDefinitions>

                <!-- Navigation -->
                <ListBox x:Name="NavigationList"
                         SelectionChanged="OnNavigationSelectionChanged"
                         Grid.Row="0">
                    <ListBoxItem Content="Launch" />
                    <ListBoxItem Content="Settings" />
                </ListBox>

                <!-- Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
                    <Button Content="Website"
                            Name="WebsiteButton"
                            HorizontalAlignment="Left"
                            Click="OnVisitWebsiteClicked"/>
                    <Button Content="Wiki"
                            Name="WikiButton"
                            HorizontalAlignment="Left"
                            Margin="5,0,0,0"
                            Click="OnVisitWebsiteClicked"/>
                    <Button Content="Nexus"
                            Name="NexusButton"
                            HorizontalAlignment="Left"
                            Margin="5,0,0,0"
                            Click="OnVisitWebsiteClicked"/>
                    <Button Content="Discord"
                            Name="DiscordButton"
                            HorizontalAlignment="Left"
                            Margin="5,0,0,0"
                            Click="OnVisitWebsiteClicked"/>
                </StackPanel>
            </Grid>

            <Border Grid.Column="1" Padding="20">
                <ContentControl x:Name="ContentArea" />
            </Border>
        </Grid>
    </DockPanel>
    
</Window>